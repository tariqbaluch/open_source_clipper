{% extends "base_step.html" %}

{% block content %}
<div class="w-full h-full flex flex-col px-4 py-4 lg:px-6 lg:py-6 overflow-y-auto lg:overflow-hidden">

    <!-- Header -->
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between mb-6 gap-4 shrink-0">
        <div class="flex items-center gap-4 w-full lg:w-auto">
            <button id="back-btn" class="text-gray-400 hover:text-white transition p-2 hover:bg-white/10 rounded-lg">
                <i class="fa-solid fa-arrow-left"></i>
            </button>
            <h1 class="text-lg lg:text-xl font-bold text-white truncate flex-1">
                #{{ clip.index or 1 }} {{ clip.title or 'Untitled Clip' }}
            </h1>
        </div>
        <div class="flex flex-wrap items-center gap-2 lg:gap-4 w-full lg:w-auto justify-end">
            <button id="delete-clip-btn"
                class="bg-red-500/20 border border-red-500/30 text-red-400 text-[10px] lg:text-xs font-bold px-3 py-2 rounded-lg hover:bg-red-500/30 transition flex items-center gap-2 whitespace-nowrap">
                <i class="fa-solid fa-trash"></i> <span class="hidden sm:inline">Delete</span>
            </button>
            <button
                class="bg-[#1a1a1a] border border-white/10 text-white text-[10px] lg:text-xs font-bold px-3 py-2 rounded-lg hover:bg-white/10 transition whitespace-nowrap">
                Remove watermark
            </button>
            <button id="publish-btn"
                class="bg-[#1a1a1a] border border-white/10 text-white text-[10px] lg:text-xs font-bold px-3 py-2 rounded-lg hover:bg-white/10 transition flex items-center gap-2 whitespace-nowrap">
                <i class="fa-regular fa-calendar"></i> <span class="hidden sm:inline">Publish on Social</span><span
                    class="sm:hidden">Publish</span>
            </button>
            <select id="format-selector"
                class="bg-[#1a1a1a] border border-white/10 text-white text-[10px] lg:text-xs font-bold px-3 py-2 rounded-lg hover:bg-white/10 transition whitespace-nowrap">
                <option value="9:16">9:16 (Vertical)</option>
                <option value="16:9">16:9 (Horizontal)</option>
                <option value="1:1">1:1 (Square)</option>
            </select>
            <button id="download-btn"
                class="bg-purple-500 border border-purple-500/30 text-white text-[10px] lg:text-xs font-bold px-3 py-2 rounded-lg hover:bg-purple-600 transition flex items-center gap-2 whitespace-nowrap">
                <i class="fa-solid fa-download"></i> <span class="hidden sm:inline">Download HD</span><span
                    class="sm:hidden">Download</span>
            </button>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="flex-1 grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8 min-h-0">

        <!-- Left: Video Player -->
        <div
            class="lg:col-span-1 flex flex-col justify-center h-auto lg:h-full min-h-[400px] lg:min-h-0 bg-black/20 rounded-2xl border border-white/5 p-4">
            <div class="relative w-full h-full flex items-center justify-center group">
                <!-- Video Element: max-w-full max-h-full ensures it fits without cropping -->
                <video id="main-video" class="max-w-full max-h-full w-auto h-auto object-contain rounded-lg shadow-2xl"
                    controls playsinline loop></video>

                <!-- Placeholder if no video -->
                <div id="video-placeholder"
                    class="absolute inset-0 flex items-center justify-center text-gray-500 pointer-events-none">
                    <i class="fa-solid fa-spinner fa-spin text-2xl"></i>
                </div>

                <!-- Overlay Info -->
                <div
                    class="absolute top-4 left-4 bg-black/60 px-2 py-1 rounded text-[10px] font-mono text-white pointer-events-none backdrop-blur-sm z-10">
                    <span id="current-time">00:00</span> / <span id="total-time">00:00</span>
                </div>
            </div>
        </div>

        <!-- Right: Analysis & Transcript -->
        <div
            class="lg:col-span-2 flex flex-col h-[600px] lg:h-full bg-[#111] border border-white/10 rounded-2xl overflow-hidden">

            <!-- Scores Header -->
            <div class="p-4 lg:p-6 border-b border-white/10 shrink-0">
                <div class="flex flex-wrap items-center justify-between mb-4 gap-4">
                    <div class="text-3xl font-bold text-white">/100</div>
                    <div class="flex gap-4 lg:gap-8 text-center">
                        <div>
                            <div class="text-orange-500 font-bold text-lg">C</div>
                            <div class="text-[10px] text-gray-500 uppercase tracking-wider">Hook</div>
                        </div>
                        <div>
                            <div class="text-orange-500 font-bold text-lg bg-white/10 rounded px-2">C</div>
                            <div class="text-[10px] text-gray-500 uppercase tracking-wider font-bold text-white">Flow
                            </div>
                        </div>
                        <div>
                            <div class="text-orange-500 font-bold text-lg">C</div>
                            <div class="text-[10px] text-gray-500 uppercase tracking-wider">Engagement</div>
                        </div>
                        <div>
                            <div class="text-orange-500 font-bold text-lg">C</div>
                            <div class="text-[10px] text-gray-500 uppercase tracking-wider">Trend</div>
                        </div>
                    </div>
                </div>

                <div class="text-sm text-gray-400 leading-relaxed">
                    <span class="text-gray-500 font-bold uppercase text-xs mr-2">Summary</span>
                    <span id="clip-summary">Loading summary...</span>
                </div>
            </div>

            <!-- Transcript Section -->
            <div class="flex-1 flex flex-col min-h-0">
                <div class="p-4 flex items-center justify-between border-b border-white/5 shrink-0">
                    <h3 class="text-sm font-bold text-gray-400">Scene analysis</h3>
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" id="transcript-only-toggle"
                            class="w-4 h-4 rounded bg-[#1a1a1a] border-gray-600 text-green-500 focus:ring-0">
                        <span class="text-xs text-gray-400">Transcript only</span>
                    </label>
                </div>

                <div id="transcript-container" class="flex-1 overflow-y-auto p-4 space-y-6">
                    <!-- Transcript Items injected here -->
                </div>
            </div>

            <!-- Footer Action -->
            <div class="p-4 border-t border-white/10 flex justify-end shrink-0">
                <button class="bg-white text-black font-bold text-sm px-6 py-2 rounded-lg hover:bg-gray-200 transition">
                    Select Clip
                </button>
            </div>

        </div>
    </div>

</div>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center">
    <div class="bg-[#1a1a1a] border border-white/10 rounded-2xl p-6 max-w-md w-full mx-4">
        <h3 class="text-white text-lg font-bold mb-4">Delete Clip?</h3>
        <p class="text-gray-400 text-sm mb-6">Are you sure you want to delete this clip? This action cannot be undone.
        </p>
        <div class="flex gap-3">
            <button id="cancel-delete-btn"
                class="flex-1 bg-white/10 text-white font-bold py-2 rounded-lg hover:bg-white/20 transition">
                Cancel
            </button>
            <button id="confirm-delete-btn"
                class="flex-1 bg-red-500 text-white font-bold py-2 rounded-lg hover:bg-red-600 transition">
                Delete
            </button>
        </div>
        const downloadBtn = document.getElementById('download-btn');
        const deleteClipBtn = document.getElementById('delete-clip-btn');
        const formatSelector = document.getElementById('format-selector');
        const backBtn = document.getElementById('back-btn');
        const currentTimeEl = document.getElementById('current-time');
        const totalTimeEl = document.getElementById('total-time');
        const deleteModal = document.getElementById('delete-modal');
        const confirmDeleteBtn = document.getElementById('confirm-delete-btn');
        const cancelDeleteBtn = document.getElementById('cancel-delete-btn');

        // Data
        const clip = {{ clip | tojson | safe }};

        function init() {
        try {
        if (!clip) {
        console.error("Clip data is missing");
        return;
        }

        loadPreview();
        renderTranscript(clip.transcript_segments || [], clipStart, clipEnd);

        if (clipSummary) {
        clipSummary.textContent = clip.description || clip.why || "No summary available for this clip.";
        }

        // Video Events
        if (mainVideo) {
        mainVideo.addEventListener('timeupdate', () => {
        if (currentTimeEl) currentTimeEl.textContent = formatTime(mainVideo.currentTime);
        });
        mainVideo.addEventListener('loadedmetadata', () => {
        if (totalTimeEl) totalTimeEl.textContent = formatTime(mainVideo.duration);
        });
        }

        if (backBtn) {
        backBtn.addEventListener('click', () => {
        window.location.href = `/app/jobs/${jobId}/clips`;
        });
        }
        } catch (e) {
        console.error("Error in init:", e);
        }
        }

        function renderTranscript(segments, startT, endT) {
        if (!transcriptContainer) return;
        transcriptContainer.innerHTML = "";

        const lines = segments || [];

        lines.forEach(s => {
        const row = document.createElement("div");
        row.className = "group cursor-pointer";

        const range = `[${formatDuration(s.start)} - ${formatDuration(s.end)}]`;

        row.innerHTML = `
        <div class="text-xs text-gray-500 font-mono mb-1 group-hover:text-white transition">${range}</div>
        <div class="flex gap-2">
            <i class="fa-regular fa-closed-captioning text-gray-600 mt-0.5 text-xs"></i>
            <p class="text-sm text-gray-300 leading-relaxed group-hover:text-white transition">
                ${s.text}
            </p>
        </div>
        `;

        row.addEventListener("click", () => {
        if (mainVideo) {
        const seekTime = Math.max(0, (s.start || 0) - clipStart);
        mainVideo.currentTime = seekTime;
        mainVideo.play().catch(() => { });
        }
        });

        transcriptContainer.appendChild(row);
        });
        }

        async function loadPreview() {
        if (!mainVideo) return;
        try {
        const form = new FormData();
        form.append("job_id", jobId);
        form.append("clip_id", clipId);
        const res = await fetch("/export/preview", { method: "POST", body: form });
        if (res.ok) {
        const data = await res.json();
        mainVideo.src = data.preview_url;
        if (videoPlaceholder) videoPlaceholder.classList.add("hidden");
        } else {
        if (videoPlaceholder) videoPlaceholder.textContent = "Preview generation failed.";
        }
        } catch (e) {
        console.error(e);
        if (videoPlaceholder) videoPlaceholder.textContent = "Error loading preview.";
        }
        }

        // Download Handler with format selection
        if (downloadBtn && formatSelector) {
        downloadBtn.addEventListener("click", async () => {
        const aspect = formatSelector.value;
        downloadBtn.disabled = true;
        downloadBtn.innerHTML = `<i class="fa-solid fa-spinner fa-spin"></i> Preparing...`;
        try {
        const form = new FormData();
        form.append("job_id", jobId);
        form.append("clip_id", clipId);
        form.append("aspect", aspect);
        const res = await fetch("/export/clip/download", {
        method: "POST",
        body: form,
        });
        if (!res.ok) throw new Error("Download failed");
        const data = await res.json();
        if (data.download_url) {
        window.location.href = data.download_url;
        }
        } catch (e) {
        alert("Error downloading clip");
        console.error(e);
        } finally {
        downloadBtn.disabled = false;
        downloadBtn.innerHTML = `<i class="fa-solid fa-download"></i> <span class="hidden sm:inline">Download
            HD</span><span class="sm:hidden">Download</span>`;
        }
        });
        }

        // Delete Handler
        if (deleteClipBtn && deleteModal) {
        deleteClipBtn.addEventListener("click", () => {
        deleteModal.classList.remove('hidden');
        });
        }

        if (confirmDeleteBtn) {
        confirmDeleteBtn.addEventListener("click", async () => {
        try {
        const res = await fetch(`/jobs/${jobId}/clips/${clipId}`, { method: 'DELETE' });
        if (!res.ok) throw new Error('Delete failed');
        window.location.href = `/app/jobs/${jobId}/clips`;
        } catch (e) {
        alert('Failed to delete clip: ' + e.message);
        if (deleteModal) deleteModal.classList.add('hidden');
        }
        });
        }

        if (cancelDeleteBtn && deleteModal) {
        cancelDeleteBtn.addEventListener("click", () => {
        deleteModal.classList.add('hidden');
        });
        }

        // Close modal on outside click
        if (deleteModal) {
        deleteModal.addEventListener('click', (e) => {
        if (e.target === deleteModal) {
        deleteModal.classList.add('hidden');
        }
        });
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
        if (e.key === 'Delete' && deleteClipBtn) {
        deleteClipBtn.click();
        }
        if (e.key === 'Escape' && deleteModal && !deleteModal.classList.contains('hidden')) {
        if (cancelDeleteBtn) cancelDeleteBtn.click();
        }
        });

        function formatTime(seconds) {
        if (!seconds || isNaN(seconds)) return "00:00";
        const m = Math.floor(seconds / 60);
        const s = Math.floor(seconds % 60);
        return `${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
        }

        function formatDuration(seconds) {
        return formatTime(seconds);
        }

        init();
        </script>
        {% endblock %}